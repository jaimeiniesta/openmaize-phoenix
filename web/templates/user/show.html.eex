<h2>Show user</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Biography:</strong>
    <p><%= @user.bio %></p>
  </li>

</ul>

<%= if @current_user == @user do %>
<%= link "Edit", to: user_path(@conn, :edit, @user) %>
<%= else %>
<%= link "Back", to: user_path(@conn, :index) %>
<%= end %>
